---
- name: Change Nginx welcome page on Ubuntu to say "Welcome to AWS"
  hosts: all
  become: true

  tasks:
    - name: Ensure nginx is instal
      apt:
        name: nginx
        state: present
        update_cache: yes

    - name: Replace Nginx default welcome page with custom content
      copy:
        dest: /usr/share/nginx/html/index.html
        content: |
          <html>
          <head>
              <title>Welcome to AWS</title>
          </head>
          <body>
              <h1>Welcome to AWS</h1>
              <p>This page was deployed using Ansible.</p>
          </body>
          </html>
        owner: www-data
        group: www-data
        mode: '0644'
      notify: Restart nginx

  handlers:
    - name: Restart nginx
      service:
        name: nginx
        state: restarted
